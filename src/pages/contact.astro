---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Western Publish - Get Your Publishing Quote Today"
  description="Contact Western Publish for professional publishing services. Get a free quote for ghostwriting, editing, formatting, publishing, and marketing. We respond within 24 hours."
  keywords="contact western publish, publishing quote, book publishing consultation, author services contact, publishing company contact"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content" data-aos="fade-up">
        <h1 class="typing-effect" data-text="Let's Bring Your Book to Life" data-speed="80"></h1>
        <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="500">
          Ready to start your publishing journey? Get in touch with our expert team for a personalized consultation and quote. We're here to help transform your ideas into published works.
        </p>
      </div>
    </div>
    <div class="hero-wave">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="white"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="white"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="white"></path>
      </svg>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="container">
      <div class="contact-content">
        <!-- Contact Information -->
        <div class="contact-info" data-aos="fade-right">
          <h2>Get in Touch</h2>
          <p class="text-large">We're here to help you every step of the way. Reach out to discuss your project, get a quote, or ask any questions about our services.</p>
          
          <div class="contact-methods">
            <div class="contact-method" data-aos="fade-up" data-aos-delay="100">
              <div class="method-icon floating" data-amplitude="5" data-speed="3">
                <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Email Us</h3>
                <p>info@westernpublish.com</p>
                <span class="response-time">Response within 24 hours</span>
              </div>
            </div>
            
            <div class="contact-method" data-aos="fade-up" data-aos-delay="200">
              <div class="method-icon floating" data-amplitude="6" data-speed="2.5">
                <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Call Us</h3>
                <p>(505) 375-3181</p>
                <span class="response-time">Mon-Fri, 9 AM - 6 PM MST</span>
              </div>
            </div>
            
            <div class="contact-method" data-aos="fade-up" data-aos-delay="300">
              <div class="method-icon floating" data-amplitude="7" data-speed="4">
                <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Visit Our Office</h3>
                <p>1209 MOUNTAIN ROAD PL NE STE R<br>ALBUQUERQUE, NM 87110</p>
                <span class="response-time">By appointment only</span>
              </div>
            </div>
            
            <div class="contact-method" data-aos="fade-up" data-aos-delay="400">
              <div class="method-icon floating" data-amplitude="4" data-speed="3.5">
                <svg width="32" height="32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <div class="method-content">
                <h3>Live Chat</h3>
                <p>Chat with our team</p>
                <span class="response-time">Available during business hours</span>
              </div>
            </div>
          </div>
          
          <div class="social-links" data-aos="fade-up" data-aos-delay="500">
            <h3>Follow Us</h3>
            <div class="social-icons">
              <a href="#" class="social-icon" aria-label="Facebook">
                <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Twitter">
                <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="LinkedIn">
                <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href="#" class="social-icon" aria-label="Instagram">
                <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="contact-form-container" data-aos="fade-left">
          <div class="form-header">
            <h2>Send Us a Message</h2>
            <p>Fill out the form below and we'll get back to you within 24 hours with a personalized response.</p>
          </div>
          
          <form class="contact-form" name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
            <input type="hidden" name="form-name" value="contact" />
            <div class="hidden">
              <label>Don't fill this out if you're human: <input name="bot-field" /></label>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name *</label>
                <input type="text" id="firstName" name="firstName" required>
              </div>
              <div class="form-group">
                <label for="lastName">Last Name *</label>
                <input type="text" id="lastName" name="lastName" required>
              </div>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="service">Primary Service Interest *</label>
              <select id="service" name="service" required>
                <option value="">Select a service...</option>
                <option value="ghostwriting">Ghostwriting</option>
                <option value="editing">Editing</option>
                <option value="formatting">Formatting</option>
                <option value="publishing">Publishing</option>
                <option value="marketing">Marketing</option>
                <option value="multiple">Multiple Services</option>
                <option value="consultation">General Consultation</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="projectType">Project Type</label>
              <select id="projectType" name="projectType">
                <option value="">Select project type...</option>
                <option value="fiction">Fiction</option>
                <option value="non-fiction">Non-Fiction</option>
                <option value="memoir">Memoir/Biography</option>
                <option value="business">Business Book</option>
                <option value="academic">Academic/Educational</option>
                <option value="children">Children's Book</option>
                <option value="poetry">Poetry</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-row">
              <div class="form-group">
                <label for="timeline">Desired Timeline</label>
                <select id="timeline" name="timeline">
                  <option value="">Select timeline...</option>
                  <option value="urgent">Rush (1-2 weeks)</option>
                  <option value="fast">Fast (3-4 weeks)</option>
                  <option value="standard">Standard (1-2 months)</option>
                  <option value="flexible">Flexible (2+ months)</option>
                </select>
              </div>
              <div class="form-group">
                <label for="budget">Budget Range</label>
                <select id="budget" name="budget">
                  <option value="">Select budget range...</option>
                  <option value="under-1000">Under $1,000</option>
                  <option value="1000-2500">$1,000 - $2,500</option>
                  <option value="2500-5000">$2,500 - $5,000</option>
                  <option value="5000-10000">$5,000 - $10,000</option>
                  <option value="10000-plus">$10,000+</option>
                  <option value="discuss">Prefer to discuss</option>
                </select>
              </div>
            </div>
            
            <div class="form-group">
              <label for="message">Project Details *</label>
              <textarea id="message" name="message" rows="6" required placeholder="Tell us about your project, goals, and any specific requirements. The more details you provide, the better we can assist you."></textarea>
            </div>
            
            <div class="form-group">
              <label class="checkbox-label">
                <input type="checkbox" name="newsletter" value="yes">
                <span class="checkmark"></span>
                Subscribe to our newsletter for publishing tips and industry insights
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg submit-btn">
              <span class="btn-text">Send Message</span>
              <span class="btn-loading" style="display: none;">Sending...</span>
            </button>
            
            <p class="form-note">
              By submitting this form, you agree to our <a href="/privacy">Privacy Policy</a>. We'll never share your information with third parties.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section">
    <div class="container">
      <div class="map-content" data-aos="fade-up">
        <div class="map-info">
          <h2>Visit Our Office</h2>
          <p>Located in the heart of New York's publishing district, our office is easily accessible by public transportation. Schedule an appointment to meet with our team in person.</p>
          
          <div class="office-details">
            <div class="detail-item">
              <strong>Address:</strong>
              <span>1209 MOUNTAIN ROAD PL NE STE R, ALBUQUERQUE, NM 87110</span>
            </div>
            <div class="detail-item">
              <strong>Office Hours:</strong>
              <span>Monday - Friday: 9:00 AM - 6:00 PM MST</span>
            </div>
            <div class="detail-item">
              <strong>Parking:</strong>
              <span>Street parking and nearby garages available</span>
            </div>
            <div class="detail-item">
              <strong>Public Transit:</strong>
              <span>ABQ RIDE bus routes available nearby</span>
            </div>
          </div>
          
          <a href="#" class="btn btn-outline" id="schedule-visit">Schedule a Visit</a>
        </div>
        
        <div class="map-container">
          <div class="map-placeholder">
            <div class="map-overlay">
              <div class="map-pin floating" data-amplitude="8" data-speed="3">
                <svg width="40" height="40" fill="var(--primary-600)" viewBox="0 0 24 24">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" fill="white"/>
                </svg>
              </div>
              <p>Interactive map would be embedded here</p>
              <small>Click to view in Google Maps</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header text-center" data-aos="fade-up">
        <h2>Frequently Asked Questions</h2>
        <p class="text-large">Get quick answers to common questions about our services and process.</p>
      </div>
      
      <div class="faq-container">
        <div class="faq-item" data-aos="fade-up" data-aos-delay="100">
          <div class="faq-question">
            <h3>How quickly can you respond to my inquiry?</h3>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>We respond to all inquiries within 24 hours during business days. For urgent projects, we often respond within a few hours. Our team is committed to providing timely and thorough responses to help you move forward with your publishing goals.</p>
          </div>
        </div>
        
        <div class="faq-item" data-aos="fade-up" data-aos-delay="200">
          <div class="faq-question">
            <h3>Do you offer free consultations?</h3>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Yes! We offer a complimentary 30-minute consultation to discuss your project, understand your goals, and recommend the best services for your needs. This helps us provide you with an accurate quote and timeline.</p>
          </div>
        </div>
        
        <div class="faq-item" data-aos="fade-up" data-aos-delay="300">
          <div class="faq-question">
            <h3>What information should I include in my initial inquiry?</h3>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>The more details you provide, the better we can assist you. Include your project type, current status (outline, draft, completed manuscript), desired services, timeline, and any specific goals or requirements. Don't worry if you're not sure about everything—we'll help guide you through the process.</p>
          </div>
        </div>
        
        <div class="faq-item" data-aos="fade-up" data-aos-delay="400">
          <div class="faq-question">
            <h3>Can you work with authors outside the United States?</h3>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Absolutely! We work with authors worldwide. Our digital collaboration tools make it easy to work together regardless of location. We're experienced in various English dialects and can adapt our services to meet international publishing requirements.</p>
          </div>
        </div>
        
        <div class="faq-item" data-aos="fade-up" data-aos-delay="500">
          <div class="faq-question">
            <h3>What's the typical timeline for a publishing project?</h3>
            <span class="faq-toggle">+</span>
          </div>
          <div class="faq-answer">
            <p>Timelines vary based on the services needed and project complexity. Editing typically takes 2-4 weeks, formatting 1-2 weeks, and comprehensive publishing packages 6-12 weeks. We'll provide a detailed timeline during your consultation based on your specific needs.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-900) 0%, var(--accent-700) 100%);
    color: white;
    padding: 120px 0 0;
    position: relative;
    overflow: hidden;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    color: white;
    min-height: 1.2em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }

  .hero-wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 120px;
  }

  .contact-section {
    padding: var(--spacing-20) 0;
    background: white;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: start;
  }

  .contact-info h2 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .contact-info p {
    margin-bottom: var(--spacing-8);
    color: var(--gray-600);
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
    margin-bottom: var(--spacing-12);
  }

  .contact-method {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-4);
    padding: var(--spacing-6);
    background: var(--gray-50);
    border-radius: var(--border-radius-lg);
    transition: all 0.3s ease;
  }

  .contact-method:hover {
    background: white;
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .method-icon {
    width: 64px;
    height: 64px;
    background: var(--primary-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-600);
    flex-shrink: 0;
  }

  .method-content h3 {
    margin-bottom: var(--spacing-2);
    color: var(--gray-900);
  }

  .method-content p {
    margin-bottom: var(--spacing-2);
    color: var(--gray-700);
    font-weight: 500;
  }

  .response-time {
    color: var(--gray-500);
    font-size: 0.875rem;
  }

  .social-links h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .social-icons {
    display: flex;
    gap: var(--spacing-3);
  }

  .social-icon {
    width: 48px;
    height: 48px;
    background: var(--gray-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-600);
    transition: all 0.3s ease;
  }

