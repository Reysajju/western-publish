---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Western Publish - Professional Publishing Services | Transform Your Ideas Into Published Works"
  description="Western Publish offers comprehensive publishing services including ghostwriting, editing, formatting, publishing, and marketing. Transform your ideas into published works with our expert team."
  keywords="professional publishing services, ghostwriting, book editing, book formatting, self-publishing, book marketing, author services, manuscript editing, book publishing company"
>
  <Navigation />
  
  <!-- Hero Section with Animations -->
  <section class="hero">
    <div class="hero-background parallax" data-speed="0.5"></div>
    <div class="container">
      <div class="hero-content">
        <div class="hero-text" data-aos="fade-right" data-aos-duration="1000">
          <h1 class="typing-effect" data-text="Transform Your Ideas Into Published Works" data-speed="80"></h1>
          <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="500">
            Western Publish is your trusted partner for professional publishing services. From initial concept to final publication, we provide comprehensive support for authors at every stage of their journey.
          </p>
          <div class="hero-cta" data-aos="fade-up" data-aos-delay="800">
            <a href="#contact" class="btn btn-primary btn-lg">Get Started Today</a>
            <a href="#services" class="btn btn-outline btn-lg">Explore Services</a>
          </div>
          <div class="hero-stats" data-aos="fade-up" data-aos-delay="1000">
            <div class="stat">
              <div class="stat-number" data-aos="zoom-in" data-aos-delay="1200">500+</div>
              <div class="stat-label">Books Published</div>
            </div>
            <div class="stat">
              <div class="stat-number" data-aos="zoom-in" data-aos-delay="1400">200+</div>
              <div class="stat-label">Happy Authors</div>
            </div>
            <div class="stat">
              <div class="stat-number" data-aos="zoom-in" data-aos-delay="1600">15+</div>
              <div class="stat-label">Years Experience</div>
            </div>
          </div>
        </div>
        <div class="hero-image" data-aos="fade-left" data-aos-duration="1000">
          <div class="floating-book floating" data-amplitude="15" data-speed="2">
            <img src="https://images.pexels.com/photos/159581/dictionary-reference-book-learning-meaning-159581.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Professional publishing services" />
          </div>
          <div class="floating-elements">
            <div class="floating-icon floating" data-amplitude="10" data-speed="3" style="top: 20%; left: 10%;">
              <svg width="40" height="40" fill="var(--primary-500)" viewBox="0 0 24 24">
                <path d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
              </svg>
            </div>
            <div class="floating-icon floating" data-amplitude="8" data-speed="4" style="top: 60%; right: 10%;">
              <svg width="35" height="35" fill="var(--secondary-500)" viewBox="0 0 24 24">
                <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253"/>
              </svg>
            </div>
            <div class="floating-icon floating rotate-slow" data-amplitude="12" data-speed="2" style="bottom: 20%; left: 20%;">
              <svg width="30" height="30" fill="var(--accent-500)" viewBox="0 0 24 24">
                <path d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="hero-wave">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="white"></path>
        <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="white"></path>
        <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="white"></path>
      </svg>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section" id="services">
    <div class="container">
      <div class="section-header text-center" data-aos="fade-up">
        <h2>Our Comprehensive Publishing Services</h2>
        <p class="text-large">From manuscript to marketplace, we handle every aspect of your publishing journey with professional expertise and personalized attention.</p>
      </div>
      
      <div class="services-grid">
        <div class="service-card" data-aos="fade-up" data-aos-delay="100">
          <div class="service-icon floating" data-amplitude="5" data-speed="3">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
            </svg>
          </div>
          <h3>Ghostwriting</h3>
          <p>Professional ghostwriters bring your ideas to life. From memoirs to business books, we craft compelling narratives that capture your unique voice and vision.</p>
          <ul>
            <li>Expert storytelling and narrative structure</li>
            <li>Thorough research and fact-checking</li>
            <li>Collaborative writing process</li>
            <li>Complete confidentiality guaranteed</li>
          </ul>
          <a href="/ghostwriting" class="btn btn-primary">Learn More</a>
        </div>
        
        <div class="service-card" data-aos="fade-up" data-aos-delay="200">
          <div class="service-icon floating" data-amplitude="6" data-speed="2.5">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <h3>Editing</h3>
          <p>Transform your manuscript into a polished, professional work. Our comprehensive editing services ensure your book meets the highest standards of quality.</p>
          <ul>
            <li>Developmental editing for structure and flow</li>
            <li>Line editing for clarity and style</li>
            <li>Copy editing for grammar and consistency</li>
            <li>Proofreading for final perfection</li>
          </ul>
          <a href="/editing" class="btn btn-primary">Learn More</a>
        </div>
        
        <div class="service-card" data-aos="fade-up" data-aos-delay="300">
          <div class="service-icon floating" data-amplitude="7" data-speed="3.5">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
            </svg>
          </div>
          <h3>Formatting</h3>
          <p>Professional formatting ensures your book looks stunning in print and digital formats. We handle all technical aspects to create a polished final product.</p>
          <ul>
            <li>Print-ready interior formatting</li>
            <li>E-book formatting for all platforms</li>
            <li>Typography and layout design</li>
            <li>Cover design and artwork</li>
          </ul>
          <a href="/formatting" class="btn btn-primary">Learn More</a>
        </div>
        
        <div class="service-card" data-aos="fade-up" data-aos-delay="400">
          <div class="service-icon floating" data-amplitude="4" data-speed="4">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3>Publishing</h3>
          <p>Navigate the complex world of publishing with expert guidance. We provide comprehensive support for both traditional and self-publishing paths.</p>
          <ul>
            <li>ISBN registration and assignment</li>
            <li>Distribution to major retailers</li>
            <li>Print-on-demand setup</li>
            <li>Publishing strategy consultation</li>
          </ul>
          <a href="/publishing" class="btn btn-primary">Learn More</a>
        </div>
        
        <div class="service-card" data-aos="fade-up" data-aos-delay="500">
          <div class="service-icon floating" data-amplitude="8" data-speed="2">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"/>
            </svg>
          </div>
          <h3>Marketing</h3>
          <p>Amplify your book's reach with strategic marketing campaigns. We help you connect with readers and build a lasting author brand.</p>
          <ul>
            <li>Book launch campaigns</li>
            <li>Social media marketing</li>
            <li>Author branding and website</li>
            <li>Press release and media outreach</li>
          </ul>
          <a href="/marketing" class="btn btn-primary">Learn More</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="why-choose-us-section">
    <div class="container">
      <div class="why-choose-content">
        <div class="why-choose-text" data-aos="fade-right">
          <h2>Why Choose Western Publish?</h2>
          <p class="text-large">With over a decade of experience in the publishing industry, we've helped hundreds of authors achieve their dreams of publication. Our comprehensive approach ensures your success at every step.</p>
          
          <div class="benefits-list">
            <div class="benefit-item" data-aos="fade-up" data-aos-delay="100">
              <div class="benefit-icon pulse">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4>Proven Track Record</h4>
                <p>Over 500 successfully published books and 200+ satisfied authors trust our expertise.</p>
              </div>
            </div>
            
            <div class="benefit-item" data-aos="fade-up" data-aos-delay="200">
              <div class="benefit-icon pulse">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <div>
                <h4>Expert Team</h4>
                <p>Our team includes experienced editors, designers, and marketing professionals dedicated to your success.</p>
              </div>
            </div>
            
            <div class="benefit-item" data-aos="fade-up" data-aos-delay="300">
              <div class="benefit-icon pulse">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4>Personalized Service</h4>
                <p>Every project receives individual attention with dedicated support throughout the entire process.</p>
              </div>
            </div>
            
            <div class="benefit-item" data-aos="fade-up" data-aos-delay="400">
              <div class="benefit-icon pulse">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <div>
                <h4>Fast Turnaround</h4>
                <p>We understand deadlines matter. Our efficient processes ensure timely delivery without compromising quality.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="why-choose-image" data-aos="fade-left">
          <div class="image-container floating" data-amplitude="10" data-speed="3">
            <img src="https://images.pexels.com/photos/159711/books-bookstore-book-reading-159711.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Professional publishing team" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Preview Section -->
  <section class="testimonials-preview-section">
    <div class="container">
      <div class="section-header text-center" data-aos="fade-up">
        <h2>What Our Authors Say</h2>
        <p class="text-large">Don't just take our word for it. Here's what our satisfied authors have to say about working with Western Publish.</p>
      </div>
      
      <div class="testimonials-grid">
        <div class="testimonial-card" data-aos="fade-up" data-aos-delay="100">
          <div class="testimonial-stars">
            <span>⭐⭐⭐⭐⭐</span>
          </div>
          <blockquote>
            "Western Publish transformed my rough manuscript into a professional, compelling book. Their ghostwriting team captured my voice perfectly, and the editing was exceptional. I couldn't be happier with the final result!"
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">
              <img src="https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=100" alt="Sarah Johnson" />
            </div>
            <div>
              <strong>Sarah Johnson</strong>
              <span>Author of "Corporate Secrets"</span>
            </div>
          </div>
        </div>
        
        <div class="testimonial-card" data-aos="fade-up" data-aos-delay="200">
          <div class="testimonial-stars">
            <span>⭐⭐⭐⭐⭐</span>
          </div>
          <blockquote>
            "The formatting and design services were outstanding. My book looks incredibly professional both in print and digital formats. The marketing support helped me reach readers I never thought possible."
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">
              <img src="https://images.pexels.com/photos/1222271/pexels-photo-1222271.jpeg?auto=compress&cs=tinysrgb&w=100" alt="Michael Chen" />
            </div>
            <div>
              <strong>Michael Chen</strong>
              <span>Author of "Digital Innovation"</span>
            </div>
          </div>
        </div>
        
        <div class="testimonial-card" data-aos="fade-up" data-aos-delay="300">
          <div class="testimonial-stars">
            <span>⭐⭐⭐⭐⭐</span>
          </div>
          <blockquote>
            "From start to finish, Western Publish provided exceptional service. They guided me through every step of the publishing process with patience and expertise. Highly recommended!"
          </blockquote>
          <div class="testimonial-author">
            <div class="author-avatar">
              <img src="https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=100" alt="Emily Rodriguez" />
            </div>
            <div>
              <strong>Emily Rodriguez</strong>
              <span>Author of "Life's Journey"</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="text-center mt-12" data-aos="fade-up" data-aos-delay="400">
        <a href="/testimonials" class="btn btn-outline btn-lg">Read More Testimonials</a>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <ContactForm />
  
  <!-- Footer -->
  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-900) 0%, var(--primary-700) 100%);
    color: white;
    padding: 120px 0 0;
    position: relative;
    overflow: hidden;
    min-height: 100vh;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" fill="rgba(255,255,255,0.1)"><polygon points="1000,100 1000,0 0,100"/></svg>');
    background-size: cover;
    background-position: bottom;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    color: white;
    min-height: 1.2em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-8);
    color: var(--primary-100);
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-4);
    margin-bottom: var(--spacing-12);
  }

  .hero-stats {
    display: flex;
    gap: var(--spacing-8);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-300);
    margin-bottom: var(--spacing-1);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--primary-200);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-image {
    position: relative;
    height: 500px;
  }

  .floating-book {
    position: relative;
    z-index: 2;
  }

  .floating-book img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .floating-icon {
    position: absolute;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    padding: var(--spacing-3);
    box-shadow: var(--shadow-lg);
  }

  .hero-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }

  .hero-wave svg {
    position: relative;
    display: block;
    width: calc(100% + 1.3px);
    height: 120px;
  }

  .services-section {
    padding: var(--spacing-20) 0;
    background: white;
  }

  .section-header {
    margin-bottom: var(--spacing-16);
  }

  .section-header h2 {
    margin-bottom: var(--spacing-4);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-8);
  }

  .service-card {
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--gray-200);
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-500), var(--secondary-500));
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-200);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: var(--primary-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-600);
    margin-bottom: var(--spacing-6);
  }

  .service-card h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .service-card p {
    margin-bottom: var(--spacing-6);
    color: var(--gray-600);
  }

  .service-card ul {
    list-style: none;
    margin: 0 0 var(--spacing-6) 0;
    padding: 0;
  }

  .service-card li {
    padding: var(--spacing-2) 0;
    color: var(--gray-600);
    position: relative;
    padding-left: var(--spacing-6);
  }

  .service-card li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--success-500);
    font-weight: bold;
  }

  .why-choose-us-section {
    padding: var(--spacing-20) 0;
    background: var(--gray-50);
  }

  .why-choose-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: center;
  }

  .why-choose-text h2 {
    margin-bottom: var(--spacing-4);
  }

  .why-choose-text p {
    margin-bottom: var(--spacing-8);
  }

  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-6);
  }

  .benefit-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-4);
  }

  .benefit-icon {
    width: 48px;
    height: 48px;
    background: var(--success-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--success-600);
    flex-shrink: 0;
