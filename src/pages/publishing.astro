---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Professional Publishing Services | Western Publish"
  description="Expert publishing support for self-publishing and traditional publishing paths. ISBN registration, distribution, print-on-demand, and comprehensive publishing guidance."
  keywords="publishing services, self-publishing, traditional publishing, ISBN registration, book distribution, print-on-demand, publishing consultation"
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Professional Publishing Services</h1>
          <p class="hero-subtitle">
            Navigate the complex world of publishing with expert guidance. We provide comprehensive support for both self-publishing and traditional publishing paths.
          </p>
          <div class="hero-cta">
            <a href="#contact" class="btn btn-primary btn-lg">Start Publishing</a>
            <a href="#services" class="btn btn-outline btn-lg">Learn More</a>
          </div>
        </div>
        <div class="hero-image">
          <img src="https://images.pexels.com/photos/256546/pexels-photo-256546.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Professional publishing services" />
        </div>
      </div>
    </div>
  </section>

  <!-- Publishing Paths Section -->
  <section class="section" id="services">
    <div class="container">
      <div class="section-header text-center">
        <h2>Choose Your Publishing Path</h2>
        <p class="text-large">We support both self-publishing and traditional publishing routes, helping you choose the path that best fits your goals and circumstances.</p>
      </div>
      
      <div class="paths-grid">
        <div class="path-card">
          <div class="path-icon">
            <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h3>Self-Publishing</h3>
          <p>Take control of your publishing journey with full creative and financial control over your work.</p>
          
          <div class="path-benefits">
            <h4>Benefits:</h4>
            <ul>
              <li>Complete creative control</li>
              <li>Higher royalty rates</li>
              <li>Faster time to market</li>
              <li>Retain all rights</li>
              <li>Direct reader connection</li>
            </ul>
          </div>
          
          <div class="path-process">
            <h4>Our Support:</h4>
            <ul>
              <li>ISBN registration and assignment</li>
              <li>Print-on-demand setup</li>
              <li>Distribution to major retailers</li>
              <li>Metadata optimization</li>
              <li>Publishing platform guidance</li>
            </ul>
          </div>
        </div>
        
        <div class="path-card">
          <div class="path-icon">
            <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3>Traditional Publishing</h3>
          <p>Pursue traditional publication with expert guidance through the submission and acquisition process.</p>
          
          <div class="path-benefits">
            <h4>Benefits:</h4>
            <ul>
              <li>Publisher marketing support</li>
              <li>Advance payments</li>
              <li>Editorial expertise</li>
              <li>Wide distribution network</li>
              <li>Industry credibility</li>
            </ul>
          </div>
          
          <div class="path-process">
            <h4>Our Support:</h4>
            <ul>
              <li>Publisher research and targeting</li>
              <li>Query letter writing</li>
              <li>Book proposal development</li>
              <li>Submission tracking</li>
              <li>Contract negotiation guidance</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="services-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Our Publishing Services</h2>
        <p class="text-large">Comprehensive support for every aspect of the publishing process.</p>
      </div>
      
      <div class="grid grid-3">
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a1.994 1.994 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
            </svg>
          </div>
          <h3>ISBN Registration</h3>
          <p>Professional ISBN registration and assignment to ensure your book can be distributed worldwide through all major channels.</p>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
            </svg>
          </div>
          <h3>Print-on-Demand</h3>
          <p>Set up print-on-demand services to minimize inventory costs while ensuring your book is always available to readers.</p>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3>Global Distribution</h3>
          <p>Distribute your book to major retailers including Amazon, Barnes & Noble, Apple Books, and hundreds of other outlets worldwide.</p>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3>Publishing Consultation</h3>
          <p>Expert guidance on publishing strategy, platform selection, pricing, and market positioning to maximize your book's success.</p>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3>Royalty Management</h3>
          <p>Set up royalty tracking and payment systems to ensure you receive accurate and timely payments from your book sales.</p>
        </div>
        
        <div class="service-card">
          <div class="service-icon">
            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
            </svg>
          </div>
          <h3>Rights Management</h3>
          <p>Protect and manage your intellectual property rights, including copyright registration and licensing opportunities.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Our Publishing Process</h2>
        <p class="text-large">A step-by-step approach to getting your book published and distributed successfully.</p>
      </div>
      
      <div class="process-timeline">
        <div class="timeline-item">
          <div class="timeline-marker">1</div>
          <div class="timeline-content">
            <h3>Publishing Strategy</h3>
            <p>We assess your goals, target audience, and market position to recommend the best publishing path for your book.</p>
          </div>
        </div>
        
        <div class="timeline-item">
          <div class="timeline-marker">2</div>
          <div class="timeline-content">
            <h3>Manuscript Preparation</h3>
            <p>Ensure your manuscript is publication-ready with final editing, formatting, and cover design completion.</p>
          </div>
        </div>
        
        <div class="timeline-item">
          <div class="timeline-marker">3</div>
          <div class="timeline-content">
            <h3>Publishing Setup</h3>
            <p>Handle all technical aspects including ISBN registration, platform setup, and distribution channel configuration.</p>
          </div>
        </div>
        
        <div class="timeline-item">
          <div class="timeline-marker">4</div>
          <div class="timeline-content">
            <h3>Launch Preparation</h3>
            <p>Prepare for publication with metadata optimization, pricing strategy, and pre-launch marketing activities.</p>
          </div>
        </div>
        
        <div class="timeline-item">
          <div class="timeline-marker">5</div>
          <div class="timeline-content">
            <h3>Publication & Distribution</h3>
            <p>Launch your book across all selected platforms and distribution channels with ongoing support and monitoring.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Success Stories Section -->
  <section class="success-stories-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Success Stories</h2>
        <p class="text-large">Real authors, real success stories from our publishing services.</p>
      </div>
      
      <div class="success-grid">
        <div class="success-card">
          <div class="success-stats">
            <div class="stat">
              <div class="stat-number">15,000+</div>
              <div class="stat-label">Copies Sold</div>
            </div>
            <div class="stat">
              <div class="stat-number">#1</div>
              <div class="stat-label">Bestseller</div>
            </div>
          </div>
          <div class="success-content">
            <h3>"The Entrepreneur's Journey"</h3>
            <p>"Western Publish's self-publishing support helped me launch my business book successfully. Their distribution network got my book into major retailers, and their guidance on pricing and positioning was invaluable."</p>
            <div class="success-author">
              <strong>Robert Chen</strong>
              <span>Business Author</span>
            </div>
          </div>
        </div>
        
        <div class="success-card">
          <div class="success-stats">
            <div class="stat">
              <div class="stat-number">$50K+</div>
              <div class="stat-label">Advance</div>
            </div>
            <div class="stat">
              <div class="stat-number">3</div>
              <div class="stat-label">Book Deal</div>
            </div>
          </div>
          <div class="success-content">
            <h3>"Historical Fiction Series"</h3>
            <p>"The traditional publishing support was exceptional. They helped me craft the perfect query letter and book proposal that landed me a three-book deal with a major publisher."</p>
            <div class="success-author">
              <strong>Maria Rodriguez</strong>
              <span>Fiction Author</span>
            </div>
          </div>
        </div>
        
        <div class="success-card">
          <div class="success-stats">
            <div class="stat">
              <div class="stat-number">25,000+</div>
              <div class="stat-label">Copies Sold</div>
            </div>
            <div class="stat">
              <div class="stat-number">4.8</div>
              <div class="stat-label">Star Rating</div>
            </div>
          </div>
          <div class="success-content">
            <h3>"Personal Development Guide"</h3>
            <p>"The comprehensive publishing support took all the technical stress away. I could focus on writing while they handled ISBN registration, distribution, and all the publishing details."</p>
            <div class="success-author">
              <strong>David Thompson</strong>
              <span>Self-Help Author</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Frequently Asked Questions</h2>
        <p class="text-large">Get answers to common questions about our publishing services.</p>
      </div>
      
      <div class="faq-grid">
        <div class="faq-item">
          <h3>How long does the publishing process take?</h3>
          <p>The timeline varies by publishing path. Self-publishing typically takes 2-4 weeks once your manuscript is ready. Traditional publishing can take 6-18 months depending on the submission and acquisition process.</p>
        </div>
        
        <div class="faq-item">
          <h3>Do I retain rights to my book?</h3>
          <p>With self-publishing, you retain all rights to your work. With traditional publishing, rights are typically shared with the publisher according to the contract terms, which we help you understand and negotiate.</p>
        </div>
        
        <div class="faq-item">
          <h3>What's included in your publishing services?</h3>
          <p>Our services include ISBN registration, distribution setup, platform configuration, metadata optimization, and ongoing support. Additional services like editing and cover design are available separately.</p>
        </div>
        
        <div class="faq-item">
          <h3>Can you help with both print and digital publishing?</h3>
          <p>Yes, we support both print-on-demand and digital publishing across all major platforms including Amazon, Apple Books, Barnes & Noble, and many others.</p>
        </div>
        
        <div class="faq-item">
          <h3>What are the costs involved?</h3>
          <p>Costs vary based on your chosen services and publishing path. We provide transparent pricing with no hidden fees. Self-publishing services start at $299, while traditional publishing support is consultation-based.</p>
        </div>
        
        <div class="faq-item">
          <h3>Do you provide ongoing support after publication?</h3>
          <p>Yes, we offer ongoing support including royalty tracking, sales reporting, distribution monitoring, and assistance with updates or new editions of your book.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <ContactForm 
    title="Ready to Publish Your Book?"
    subtitle="Start your publishing journey today. Contact us to discuss your book and learn how we can help you achieve your publishing goals."
  />
  
  <!-- Footer -->
  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, var(--primary-900) 0%, var(--secondary-700) 100%);
    color: white;
    padding: 120px 0 var(--spacing-20);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" fill="rgba(255,255,255,0.1)"><polygon points="1000,100 1000,0 0,100"/></svg>');
    background-size: cover;
    background-position: bottom;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--spacing-6);
    line-height: 1.1;
    color: white;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-8);
    color: var(--primary-100);
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    gap: var(--spacing-4);
  }

  .hero-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-xl);
  }

  .paths-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-12);
    margin-top: var(--spacing-16);
  }

  .path-card {
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    position: relative;
  }

  .path-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .path-icon {
    background: var(--primary-100);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-600);
    margin-bottom: var(--spacing-6);
  }

  .path-card h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
    font-size: 1.5rem;
  }

  .path-card > p {
    margin-bottom: var(--spacing-6);
    color: var(--gray-600);
    font-size: 1.125rem;
  }

  .path-benefits, .path-process {
    margin-bottom: var(--spacing-6);
  }

  .path-benefits h4, .path-process h4 {
    margin-bottom: var(--spacing-3);
    color: var(--gray-900);
    font-size: 1.125rem;
  }

  .path-benefits ul, .path-process ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .path-benefits li, .path-process li {
    padding: var(--spacing-2) 0;
    color: var(--gray-600);
    position: relative;
    padding-left: var(--spacing-6);
  }

  .path-benefits li::before, .path-process li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--success-500);
    font-weight: bold;
  }

  .services-section {
    padding: var(--spacing-20) 0;
    background: var(--gray-50);
  }

  .service-card {
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    text-align: center;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: var(--primary-100);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-600);
    margin: 0 auto var(--spacing-6);
  }

  .service-card h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .service-card p {
    margin: 0;
    color: var(--gray-600);
  }

  .process-section {
    padding: var(--spacing-20) 0;
    background: white;
  }

  .process-timeline {
    max-width: 800px;
    margin: 0 auto;
    position: relative;
  }

  .process-timeline::before {
    content: '';
    position: absolute;
    left: 40px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--primary-200);
  }

  .timeline-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-12);
    position: relative;
  }

  .timeline-marker {
    width: 80px;
    height: 80px;
    background: var(--primary-600);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
  }

  .timeline-content {
    flex: 1;
    background: var(--gray-50);
    padding: var(--spacing-6);
    border-radius: var(--border-radius-lg);
    margin-top: var(--spacing-4);
  }

  .timeline-content h3 {
    margin-bottom: var(--spacing-3);
    color: var(--gray-900);
  }

  .timeline-content p {
    margin: 0;
    color: var(--gray-600);
  }

  .success-stories-section {
    padding: var(--spacing-20) 0;
    background: var(--gray-50);
  }

  .success-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-8);
  }

  .success-card {
    background: white;
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .success-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .success-stats {
    display: flex;
    justify-content: space-around;
    margin-bottom: var(--spacing-6);
    padding-bottom: var(--spacing-6);
    border-bottom: 1px solid var(--gray-200);
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-600);
    margin-bottom: var(--spacing-1);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .success-content h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .success-content p {
    margin-bottom: var(--spacing-6);
    color: var(--gray-600);
    font-style: italic;
  }

  .success-author strong {
    display: block;
    color: var(--gray-900);
    margin-bottom: var(--spacing-1);
  }

  .success-author span {
    color: var(--gray-500);
    font-size: 0.875rem;
  }

  .faq-section {
    padding: var(--spacing-20) 0;
    background: white;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--spacing-8);
  }

  .faq-item {
    background: var(--gray-50);
    padding: var(--spacing-6);
    border-radius: var(--border-radius-lg);
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    background: white;
    box-shadow: var(--shadow-md);
  }

  .faq-item h3 {
    margin-bottom: var(--spacing-4);
    color: var(--gray-900);
  }

  .faq-item p {
    margin: 0;
    color: var(--gray-600);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 100px 0 var(--spacing-16);
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-12);
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .hero-cta {
      flex-direction: column;
      align-items: center;
    }

    .paths-grid {
      grid-template-columns: 1fr;
    }

    .process-timeline::before {
      left: 20px;
    }

    .timeline-marker {
      width: 40px;
      height: 40px;
      font-size: 1rem;
    }

    .timeline-item {
      gap: var(--spacing-4);
    }

    .success-grid {
      grid-template-columns: 1fr;
